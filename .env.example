# Fizzy Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# SECRET KEY
# =============================================================================
# Generate with: bin/rails secret
SECRET_KEY_BASE=your_secret_key_base_here

# =============================================================================
# EMAIL / SMTP SETTINGS (Resend)
# =============================================================================
# SMTP credentials (required to enable email delivery)
SMTP_USERNAME=resend
SMTP_PASSWORD=re_your_resend_api_key_here

# SMTP server configuration (defaults are configured for Resend)
# SMTP_ADDRESS=smtp.resend.com
# SMTP_PORT=587
# SMTP_DOMAIN=resend.com
# SMTP_AUTHENTICATION=plain
# SMTP_STARTTLS=true

# The email address that Fizzy sends mail from
MAILER_FROM_ADDRESS=fizzy@yourdomain.com

# =============================================================================
# WEB PUSH NOTIFICATIONS (VAPID Keys)
# =============================================================================
# Generate with: bin/rails webpush:generate_keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

